type Query {
    findAllTodos: [Todo]
    findTodoById(id: String): Todo
}

type Mutation {
    createTodo(todo: TodoRequest): Todo
    updateTodo(id: String, todo: TodoRequest): Todo
    deleteTodo(id: String): Boolean
}

type Todo {
    id: String
    title: String
    content: String
}

input TodoRequest {
    title: String
    content: String
}